<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.nuance.dm_speechkit.fragmentsample">

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme">

		<!-- This is the login Activity of the application (not speech enabled) -->
		<activity
			android:name="com.nuance.dm_speechkit.fragmentsample.SpeechKitFragmentSample"
			android:label="Dragon Medical SpeechKit Fragment sample"
			android:exported="true">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<!-- This is a speech-enabled activity -->
		<activity
			android:name="com.nuance.dm_speechkit.fragmentsample.MySpeechEnabledActivity"
			android:label="Dragon Medical SpeechKit Fragment sample"
			android:configChanges="orientation|screenSize|keyboard|keyboardHidden" />

	</application>


</manifest>